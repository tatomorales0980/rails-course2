<img src="/users.png" alt="Contact form" style="width:150px;height:150px;>
<br>
<br>
<form action="/contacts/edit" method="post">
    <input name ="id" type="hidden" value="<%= @contact.id %>"> 
    <div class="form-group">
        <input type="text" name="first_name" value="<%= @contact.first_name %>" placeholder="FIRST NAME">
        <input type="text" name="last_name" value="<%= @contact.last_name %>" placeholder="LAST NAME">
    </div>    
    <div class="form-group">
        <input type="text" name="phone" value="<%= @contact.phone %>" placeholder="PHONE">
    </div>
    <div class="form-group">
        <input type="text" name="email" value="<%= @contact.email %>" placeholder="EMAIL">
    </div>
    <div class="form-group">
        <input type="text" name="address" value="<%= @contact.address %>" placeholder="ADDRESS">
    </div>
    <div class="form-group">
        <input type="text" name="city" value="<%= @contact.city %>" placeholder="CITY">
    </div>
    <div class="form-group">
        <input type="text" name="state" value="<%= @contact.state %>" placeholder="STATE">
    </div>
    <div class="form-group">
        <input type="text" name="zip" value="<%= @contact.zip %>" placeholder="ZIP">
    </div>
    <div class="form-group">
        <input type="submit" value="update">
    </div>
</form>